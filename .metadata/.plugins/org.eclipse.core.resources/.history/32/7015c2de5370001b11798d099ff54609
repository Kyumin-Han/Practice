package chap01;

import java.util.Scanner;

public class DigitsNo {

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		
		int n;
		
		while(true) 
		{
			System.out.print("양의 정수를 입력하세요: ");
			n = input.nextInt();
			if(n > 0)
			{
				break;
			}
			System.out.println("양수만 입력할 수 있습니다.");
		}

	}

}
