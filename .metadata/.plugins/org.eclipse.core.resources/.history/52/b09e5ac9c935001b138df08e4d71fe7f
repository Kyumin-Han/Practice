package OOP;

public class Student {
	private String name;
	private String sid;
	private String phone;
	private String gender;
	private String dept;
	private int slevel;
	
	public String getName() {
		return name;
	}
	
	public void setName(String name) {
		if(name.length() < 2)
		{
			System.out.println("이름은 2자 이상이어야 합니다.");
		}
		else
		{
			this.name = name;
		}
	}
}
